<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_message"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="0dp">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="#fff"
                android:layout_marginBottom="16dp"
                card_view:contentPadding="2dp"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="15dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:theme="@style/AlertDialog.AppCompat">
            <ImageButton
                android:id="@+id/left_arrow_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#fff"
                android:src="@drawable/leftarrow"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/title_dialog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:paddingTop="15dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/left_arrow_message"
                android:text="Send Message"
                android:textAppearance="@style/dialog_title"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:scrollbars="none"
        android:layout_below="@+id/header">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:id="@+id/from_layout"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="2dp"
            android:layout_marginBottom="8dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
            <EditText android:id="@+id/from_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:inputType="textPersonName"
                android:hint="From..." />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/subject_layout"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/from_layout"
            android:paddingLeft="2dp"
            android:layout_marginBottom="8dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
            <EditText android:id="@+id/subject_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:inputType="textPersonName"
                android:hint="Subject..."/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/urgent_layout"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/subject_layout"
            android:paddingLeft="2dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/urgent_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/spinner"
                android:text="Urgent:"
                android:inputType="textPersonName"
                android:textAppearance="@style/network_style"/>
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/urgent_message">

            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/urgent_layout"
            android:paddingLeft="2dp"
            android:layout_marginBottom="8dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:breakStrategy="balanced"
                android:inputType="textMultiLine"
                android:minLines="0"
                android:hint="Type your message..." />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_below="@+id/input_layout"
            android:layout_marginBottom="5dp">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:text="Send"
                android:textColor="@drawable/button_selector"
                android:background="@drawable/button_background"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/title_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="200dp"
            android:paddingTop="0dp"
            android:padding="2dp"
            android:gravity="center"
            android:layout_marginBottom="0dp">
            <ImageView
                android:id="@+id/offline_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/network_state"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/network_state_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text=""
                android:textAppearance="@style/network_style"/>
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>