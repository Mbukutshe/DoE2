<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_videos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPaddingLeft="@dimen/activity_horizontal_margin"
    card_view:contentPaddingRight="@dimen/activity_horizontal_margin"
    card_view:contentPaddingTop="@dimen/activity_horizontal_margin"
    card_view:theme="@style/AlertDialog.AppCompat">
    <RelativeLayout
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <FrameLayout
            android:id="@+id/title_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:id="@+id/subject_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/time_message"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:text="Subject:"
                android:layout_weight="1"
                android:textAppearance="@style/Subject"
                />
            <TextView
                android:id="@+id/time_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_toRightOf="@+id/info_text_message"
                android:layout_alignParentRight="true"
                android:textColor="@color/menuColor"
                android:text="Time"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/message_layout_message"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/title_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/video_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
                <FrameLayout
                    android:id="@+id/play_video_layout"
                    android:layout_width="wrap_content"
                    android:background="@drawable/text_view_corners"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/play_video"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/playvideo"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/video_duration_layout"
                    android:layout_width="wrap_content"
                    android:background="@drawable/textview_duration_corners"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/video_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="03:02"
                        android:textColor="#fff"/>
                </FrameLayout>
            </FrameLayout>
            <TextView
                android:id="@+id/message_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text=""
                android:textColor="@color/menuColor"
                android:layout_toLeftOf="@+id/urgent"
                android:paddingRight="50dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/author_layout_message"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/message_layout_message"
            android:paddingLeft="2dp">
            android:layout_marginBottom="0dp">
            <TextView
                android:id="@+id/profilepic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/profilepic"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/author_message"
                android:layout_gravity="start"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/author_message"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/profilepic"
                android:text=""
                android:layout_weight="1"
                android:textAppearance="@style/sender_style"/>
            <TextView
                android:id="@+id/urgent_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/info_text_message"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/messageid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/urgent_text"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/filename"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"/>
        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>